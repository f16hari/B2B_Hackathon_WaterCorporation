<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../components/head %>
  
</head>

<body>

  <div id="wrapper">
    <!-- start header -->
    <header>
     <% include ../components/header %>
    </header>
    <!-- end header -->

    <section id="inner-headline">
      <div class="container">
        <div class="row">
          <div class="span4">
            <div class="inner-heading">
              <h2>Feedbacks..</h2>
            </div>
          </div>
          
        </div>
      </div>
    </section>

    <section id="content">
      <div class="container">

        <div class="row">
        
         <form action="/feedback" method="post">
         <label for="comment">Your Comment..</label>
         <textarea rows="6" name='comment' style='width:100%;'></textarea>
         <label for="rating">Rating..</label>
           <input type="number" style='width:3%;height:27px' name="rating" min="1" max="5" >
            <input type="submit" class="btn btn-primary" style="padding:10;margin-top:-10px" > 
          </form>
        </div>

        <!-- divider -->
        <div class="row">
          <div class="span12">
            <div class="solidline"></div>
          </div>
        </div>
        <!-- end divider -->

        <div class="row">
             <%for(let i = 0; i < feeds.length; i++) {%>
          <div style="background-color:white;width:100%;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);padding:10px;position:relative">
             
                <p style='color:black;font-weight:bold'>Feedback : </p>
                <p style="color:grey"><%= feeds[i].comment%></p>
                <p style='color:black;font-weight:bold'>Rating : <%= feeds[i].rating%></p>
               
          </div>
            <br>
           <%}%>
          
        </div>


       </div>

    </section>
  	
    <footer>
      <% include ../components/footer %>
    </footer>
  </div>
  <a href="#" class="scrollup"><i class="icon-angle-up icon-rounded icon-bglight icon-2x"></i></a>

  <!-- javascript
    ================================================== -->
  <!-- Placed at the end of the document so the pages load faster -->
  <script src="/public/assets/js/jquery.js"></script>
  <script src="/public/assets/js/jquery.easing.1.3.js"></script>
  <script src="/public/assets/js/bootstrap.js"></script>
  <script src="/public/assets/js/modernizr.custom.js"></script>
  <script src="/public/assets/js/toucheffects.js"></script>
  <script src="/public/assets/js/google-code-prettify/prettify.js"></script>
  <script src="/public/assets/js/jquery.prettyPhoto.js"></script>
  <script src="/public/assets/js/portfolio/jquery.quicksand.js"></script>
  <script src="/public/assets/js/portfolio/setting.js"></script>
  <script src="/public/assets/js/animate.js"></script>

  <!-- Template Custom JavaScript File -->
  <script src="/public/assets/js/custom.js"></script>
  <script>  
 
  </script>

</body>

</html>
